<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FirstProject" 
             x:Class="FirstProject.REST_APIs.ApiPage"
             Title="API's Dashboard">

    <ContentPage.Content>
        <StackLayout Margin="30,10,0,0">
            <Button
                Text="Add Data"
                Margin="5,10,20,20"
                TextTransform="None"
                BackgroundColor="#1975D1"
                TextColor="White"
                Clicked="Button_Clicked">
            </Button>

           
            <ListView x:Name="userListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>

                                <Label Text="{Binding first_name}" />
                                <Label Text="{Binding last_name}" />
                              
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
